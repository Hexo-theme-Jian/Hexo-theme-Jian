.ai-summary {
  background: #f1f3f8;
  border-radius: 10px;
  padding: 12px;
  line-height: 1.3;
  border: 1px solid #e3e8f7;

  .title {
    display: flex;
    color: #425aef;
    border-radius: 8px;
    align-items: center;
    padding: 0 12px;
    cursor: default;
    user-select: none;
    .title {
      font-weight: 700;
      margin-left: 8px;
      line-height: 1;
    }
  }

  .content {
    margin-top: 12px;
    padding: 8px 12px;
    background: #fff;
    border-radius: 8px;
    border: 1px solid #e3e8f7;
    font-size: 15px;
    line-height: 1.4;
    display: block;
  }
}
