article > div.main {
  padding: 30px 50px;
  color: var(--post-color) !important;
  content-visibility: auto;
  margin-top: 8px;
  font-size: 16px;

  .info {
    hr {
      border: .5px solid var(--page-info-color);
      border-radius: var(--card-border-radius);
    }

    .metas {
      font-size: 6px;
      color: var(--page-info-color);
      display: flex;
      align-items: center;

      .meta {
        margin: 0 5px;
        font-weight: 900;
        -webkit-font-smoothing: antialiased;
        display: var(--fa-display, inline-block);
        font-style: normal;
        font-variant: normal;
        line-height: 1;
        text-rendering: auto;

        span {
          font-weight: 500;
          font-family: none;
        }

        a {
          font-family: "Font Awesome 6 Free";
          color: var(--page-info-color);
          align-items: center;
          display: flex;

          .author-avatar {
            width: 20px;
            height: 20px;
            border-radius: 50%;
          }
        }
      }
    }
  }

  pre {
    display: block;
  }
}

article {
  div.content {
    display: block;

    h1, h2 {
      border-bottom: 1px solid rgba(0, 0, 0, .1);
    }

    psw {
      color: transparent;
      background: #7f7f7f !important;
      border-radius: 2px;
    }

    psw:hover {
      background: transparent !important;
      color: var(--post-color) !important;
    }

    blockquote {
    background: #fff;
    border: 2px solid #f6f6f6;
    border-radius: 5px;
    padding: 10px;
    margin: 1em 0;

      p {
        margin: .725rem 0;
        margin-left: 25px !important;
      }
    }
    blockquote::before {
      content: "\f10d";
      font-family: "Font Awesome 5 Free";
      font-weight: 600;
      position: absolute;
    }
    img {
      max-width: 100%;
      border-radius: 5px;
    }
  }
}

.dark article {
  div.content {
    blockquote {
      background-color: #0f172a;
      border: 2px solid #0f172a;
    }
    psw:hover {
      color: var(--post-color) !important;
      background: transparent !important;
    }
  }
}

article > div.comments {
  margin-top: 16px;
}

article > div.comments > div {
  padding: 25px;
}

article > div.headimg {
  width: 100%;
  height: 200px;
  margin: 8px 0 16px;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.read article > div.main {
    background-color: #f8f1e2;
}
.read article > div.comments {
  display: none;
}
