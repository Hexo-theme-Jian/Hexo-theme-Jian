.share.card{
    margin-top: 16px;
 .share {
      display: flex;
    text-align: center;
    margin: 16px;
    flex-direction: row;
    justify-content: center;
    a {
      margin: 8px;
      display: block;
      height: 40px;
      width: 40px;
      svg {
        width: 100%;
        height: 100%;
      }
    }
 }
.copyright {
  background: #d7d6d6;
  padding: 5px 15px;
  margin: 0;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
  margin: 10px;

  i.icon {
    position: absolute;
    right: -15px;
    font-size: 70px;
    color: #bababa;
    z-index: 0;
    top: -15px;
  }

  .text {
    z-index: 10;
    position: relative;
    font-weight: bold;
    color: #37475b;
  }
}

.dark .copyright {
  background-color: #0f172a;

  i.icon {
    color:   #323c4a;
  }

  .text {
    color: rgba(255, 255, 255, 0.859);
  }
}
}
