<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
<meta desc name="description" content="<%= config.description || '' %>">
<% if (is_post() || is_page()){ %>
    <meta property="og:description"
          content="<%= (page.excerpt || page.description || truncate(strip_html(page.content), {length: 200}) || page.content || config.description || '').replace(/\n/g, '') %>">
    <meta name="description"
          content="<%= (page.excerpt || page.description || truncate(strip_html(page.content), {length: 200}) || page.content || config.description || '').replace(/\n/g, '') %>">
    <meta name="keywords" content="
<%= (function () {
        if (!page.categories || !page.tags) {
            return '';
        }
        keywordls = page.categories.data
        keywordls = keywordls.concat(page.tags.data)
        keywords = ''
        for (i in keywordls) {
            keywords += ',' + keywordls[i].name
        }
        return keywords.slice(1)
    })(); %>">
    <%- open_graph() %>
<% } %>
